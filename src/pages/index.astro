---
import HeroVisual from '../components/HeroVisual.astro';
import Layout from '../layouts/Layout.astro';
const posts = await Astro.glob('./blog/*.md');
const sortedPosts = posts.sort((a, b) => 
    new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);

const featuredPost = sortedPosts[0];
const remainingPosts = sortedPosts.slice(1);
---

<Layout title="Ingeniería y Swift">
    <section class="mb-28">
        <div class="md:flex md:items-start md:justify-between md:gap-16">
            <!-- Hero text -->
            <div class="md:max-w-2xl">
                <h1 class="text-5xl font-extrabold tracking-tight text-gray-900 dark:text-white mb-6 leading-[1.1]">
                    Swift & AI: <br/><span class="text-gray-400">iOS e IA integradas</span>
                </h1>
                <p class="text-xl text-gray-500 dark:text-gray-400 max-w-2xl leading-relaxed">
                    Explorando la intersección del desarrollo nativo en Apple y la inteligencia artificial integrada.
                </p>
            </div>

            <!-- Hero visual -->
            <div class="mt-12 md:mt-2 md:w-[340px] md:shrink-0">
                <HeroVisual />
            </div>
        </div>
    </section>

    {featuredPost && (
        <section class="mb-32">
            <h2 class="text-xs font-bold uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500 mb-12 border-b border-gray-100 dark:border-gray-800 pb-2">Destacado</h2>
            <a href={featuredPost.url} class="group block no-underline text-inherit">
                <div class="bg-white dark:bg-[#2c2c2e] border border-gray-100 dark:border-gray-800 p-8 rounded-[2.5rem] shadow-sm group-hover:shadow-xl group-hover:-translate-y-1 transition-all duration-500 grid md:grid-cols-2 gap-10 items-center">
                    {featuredPost.frontmatter.image && (
                        <div class="order-2 md:order-none">
                            <div class="mb-6 not-prose">
                                <img
                                    src={featuredPost.frontmatter.image}
                                    alt={
                                        featuredPost.frontmatter.imageAlt ||
                                        featuredPost.frontmatter.title
                                    }
                                    class="w-full max-h-[280px] object-contain bg-gray-50 dark:bg-[#1c1c1e] rounded-[1.5rem] border border-gray-100 dark:border-gray-800"
                                />
                            </div>
                        </div>
                    )}
                    <div class="order-1 md:order-none">
                        <time class="text-sm font-mono text-gray-400">{featuredPost.frontmatter.date}</time>
                        <h3 class="text-3xl font-bold mt-4 mb-4 group-hover:text-primary transition-colors italic no-underline text-gray-900 dark:text-white">
                            {featuredPost.frontmatter.title}
                        </h3>
                        <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-6 no-underline">{featuredPost.frontmatter.description}</p>
                        <span class="inline-flex items-center text-sm font-bold text-primary uppercase tracking-tighter">
                            Leer el artículo completo 
                            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </span>
                    </div>
                </div>
            </a>
        </section>
    )}

    {remainingPosts.length > 0 && (
        <section>
            <h2 class="text-xs font-bold uppercase tracking-[0.2em] text-gray-400 dark:text-gray-500 mb-12 border-b border-gray-100 dark:border-gray-800 pb-2">Archivo</h2>
            <div class="grid gap-16">
                {remainingPosts.map(post => (
                    <a href={post.url} class="group flex flex-col md:flex-row md:items-baseline justify-between gap-4 no-underline">
                        <h3 class="text-lg font-bold text-gray-800 dark:text-white group-hover:text-primary transition-colors no-underline">
                            {post.frontmatter.title}
                        </h3>
                        <div class="flex-grow border-b border-dotted border-gray-200 dark:border-gray-700 mx-4 hidden md:block"></div>
                        <time class="text-sm font-mono text-gray-400 shrink-0">{post.frontmatter.date}</time>
                    </a>
                ))}
            </div>
        </section>
    )}
</Layout>