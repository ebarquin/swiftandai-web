---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | Swift & AI</title>
	</head>
	<body class="bg-[#fbfbfd] text-[#1d1d1f] antialiased transition-colors duration-300">
		<nav class="sticky top-0 z-40 w-full backdrop-blur-md bg-white/70 border-b border-gray-100">
			<div class="max-w-2xl mx-auto px-6 h-14 flex items-center justify-between">
				<a href="/" class="font-semibold tracking-tight text-lg hover:opacity-70 transition-opacity">Swift & AI</a>
				<div class="space-x-6 text-sm font-medium text-gray-500">
					<a href="/" class="hover:text-primary transition-colors">Blog</a>
					<a href="/about" class="hover:text-primary transition-colors">Sobre</a>
				</div>
			</div>
		</nav>

		<main class="max-w-2xl mx-auto px-6 py-16 prose prose-slate prose-headings:font-bold prose-a:text-primary">
	        <slot /> 
        </main>

		<footer class="max-w-2xl mx-auto px-6 py-12 border-t border-gray-100 text-[11px] text-gray-400 font-mono tracking-widest uppercase">
			&copy; {new Date().getFullYear()} // SWIFT & AI // Ingenier√≠a Nativa
		</footer>
	</body>
</html>